{% extends  'base.html' %}
{% load crispy_forms_tags %}

{% block main %}
{% if user.is_authenticated %}
<div class="card">
<div class="card-body">
<h4 class="card-title">Welcome {{ user.username }}</h4>

<form method="post">
{% csrf_token %}
<input type="hidden" name="next" value="{{ next }}">

{{ form|crispy }}

<a href="{% url 'logout' %}"><button type="button" class="btn btn-primary btn-block">Log Out</button></a>
</form>
</div>
</div>
{% endif %}
{% endblock %}






















